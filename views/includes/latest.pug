mixin duration(x, y)
  div.flex.flex-col.w-16.border.border-gray-200.rounded
    div.py-4.text-3xl.text-blue-500.font-bold=x
    div.py-1.font-bold.border-t.border-gray-200=y

div.pt-16
  .container.mx-auto.pb-10
    +title('LATEST EVENTS')
    .latest.flex.flex-col.gap-16
      .latest-up.flex.gap-16.text-center
        img(src='./public/pics/speaker.png' class='w-1/3 hidden lg:block')
        .latest-up-text 
          .flex.justify-center.gap-4.mb-10
            each val in [{d:"200", n:"Days"}, {d:"17", n:"Hours"}, {d:"31", n:"Min"}, {d:"59", n:"Sec"}]
              +duration(val.d, val.n)
          h2.text-3xl.mb-4.font-bold Tech Masters Event 2021
          p.text-xl.font-gray-500 Lorem Ipsum Dolor Sit Amet Consectetur Adipisicing Elit. Et Vero Tenetur Doloremque Iusto Ut Adipisci Quam Ratione Aliquam Excepturi Nulla In Harum, Veritatis Porro
      .latest-down.flex.justify-center
        form.flex-col(class='flex md:flex-row justify-center py-3 px-7 items-center w-2/3 bg-gray-300 rounded-full border-2 border-gray-500 my-5 mx-auto gap-5 ring-0')
          input.w-full.bg-white.flex-1.rounded-full.bg-white.p-5.text-blue-600(type='text' class="md:w-auto" style="caret-color: #0b82dd;color: #0b82dd;")
          input.w-full(type='submit' style='background-color: #2196F3;' class='md:w-auto px-8 h-full text-white rounded-full text-2xl')

